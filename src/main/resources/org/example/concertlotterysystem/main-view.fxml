<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.concertlotterysystem.controllers.MainController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-border-color: #ddd; -fx-padding: 15;">
            <TextField fx:id="searchField" prefWidth="300" promptText="搜尋活動：" />
            <Button fx:id="searchButton" onAction="#handleSearch" text="搜尋" />
            <Region HBox.hgrow="ALWAYS" />  <HBox alignment="CENTER_RIGHT" spacing="10">
            <Label fx:id="usernameLabel" style="-fx-font-weight: bold;" text="用戶名稱" />
            <Button fx:id="userMenuButton" onAction="#handleUserMenu" text="⚙️" />
        </HBox>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;">
            <GridPane fx:id="eventGrid" alignment="TOP_LEFT" hgap="20" style="-fx-padding: 20;" vgap="20">
            </GridPane>
        </ScrollPane>
    </center>
</BorderPane>
