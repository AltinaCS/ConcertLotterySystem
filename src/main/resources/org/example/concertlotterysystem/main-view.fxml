<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.concertlotterysystem.controllers.MainController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-border-color: #ddd; -fx-padding: 15;">
            <TextField fx:id="searchField" promptText="搜尋活動：" prefWidth="300"/>
            <Button text="搜尋" onAction="#handleSearch"/>
            <Region HBox.hgrow="ALWAYS"/>  <HBox alignment="CENTER_RIGHT" spacing="10">
            <Label fx:id="usernameLabel" text="用戶名稱" style="-fx-font-weight: bold;"/>
            <Button fx:id="userMenuButton" text="⚙️" onAction="#handleUserMenu" />
        </HBox>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;">
            <GridPane fx:id="eventGrid"
                      hgap="20" vgap="20"
                      alignment="TOP_LEFT"
                      style="-fx-padding: 20;">
            </GridPane>
        </ScrollPane>
    </center>
</BorderPane>
